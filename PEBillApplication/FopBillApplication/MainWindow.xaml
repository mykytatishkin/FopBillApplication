<Window x:Class="FopBillApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FopBillApplication"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="PEBA" Height="600" Width="800">
    <Frame Name="MainFrame" Background="#AF4425" NavigationUIVisibility="Hidden"/>
    <Grid Background="#AF4425">
        <Border MinWidth="400" Margin="15px" Background="#fff" VerticalAlignment="Center" Padding="40px" MaxWidth="550" CornerRadius="24">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="#e38664" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="PEBillApplication" FontSize="30" FontWeight="Bold" Margin="0 0 0 20"/>

                <Grid Margin="0 0 0 20">
                    <Button HorizontalAlignment="Left" Content="GitHub" Style="{StaticResource MaterialDesignPaperSecondaryButton}"/>
                </Grid>

                <TextBox x:Name="textBoxID" materialDesign:HintAssist.Hint="Enter your ID" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                <TextBox x:Name="textBoxName" materialDesign:HintAssist.Hint="Enter your Name" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                <TextBox x:Name="textBoxCode" materialDesign:HintAssist.Hint="Enter your Code" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                <TextBox x:Name="textBoxAddress" materialDesign:HintAssist.Hint="Enter your Address" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                <Button HorizontalAlignment="Right" Content="Continue" Margin="0 20" Style="{StaticResource MaterialDesignPaperSecondaryButton}" Click="MyCompanyRegistration"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
